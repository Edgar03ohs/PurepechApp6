<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_pureuno"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/PurepechApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#4E4040"
            android:textSize="50sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtEslogan"
            android:gravity="center"
            android:text="@string/txt_eslogan"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:textColor="#4E4040"
            android:textSize="30sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_botones"
            android:text="@string/start_main"
            android:textColor="@color/colorAccent"
            android:textSize="21sp" />




    </LinearLayout>

</RelativeLayout>